@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Đăng nhập vào hệ thống quản lý cafe" />
    <meta name="author" content="Cafe Team" />
    <title>Đăng nhập - Cafe Management</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/Content/Admin/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>

    <style>
        /* Background hình ảnh quán cafe từ Unsplash */
        body {
            background: url('https://watermark.lovepik.com/photo/40075/5766.jpg_wh1200.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Poppins', sans-serif;
        }

        /* Hiệu ứng che mờ để làm nổi bật form đăng nhập */
        .bg-overlay {
            background: rgba(0, 0, 0, 0.5);
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        /* Card đăng nhập */
        .login-card {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            padding: 25px;
        }

        /* Tiêu đề */
        .login-title {
            color: #6F4E37; /* Màu cafe */
            font-weight: bold;
        }

        /* Input field */
        .form-control {
            border-radius: 8px;
            border: 1px solid #6F4E37;
        }

        /* Nút đăng nhập */
        .btn-login {
            background: #6F4E37;
            color: white;
            border-radius: 8px;
            transition: 0.3s;
        }

            .btn-login:hover {
                background: #4B2E1D;
            }
    </style>
</head>
<body>
    <div class="bg-overlay"></div>

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="col-md-5">
            <div class="card login-card">
                <div class="card-header text-center">
                    <h3 class="login-title">Đăng nhập hệ thống</h3>
                </div>
                <div class="card-body">
                    <form action="/AdminAuthentication/Login" method="post">
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputEmail" name="userName" type="email" placeholder="Email" required />
                            <label for="inputEmail"><i class="fas fa-user"></i> Email</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputPassword" name="password" type="password" placeholder="Mật khẩu" required />
                            <label for="inputPassword"><i class="fas fa-lock"></i> Mật khẩu</label>
                        </div>
                        <p class="text-danger text-center">@ViewBag.mess</p>
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-login px-4 py-2" type="submit">Đăng nhập</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/Content/Admin/js/scripts.js"></script>
</body>
</html>
