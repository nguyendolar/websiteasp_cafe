@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="banner-area" id="home">
    <div class="container">
        <div class="row fullscreen d-flex align-items-center justify-content-start">
            <!-- Dịch toàn bộ sang trái -->
            <div class="col-lg-5 col-md-6 col-sm-8">
                <div class="login-box p-4">
                    <h3 class="text-center">Đăng nhập</h3>
                    @if (ViewBag.Error != null)
                    {
                        <p class="alert alert-danger">@ViewBag.Error</p>
                    }
                    <form method="post">
                        <div class="form-group">
                            <label>Email:</label>
                            <input type="email" name="Email" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu:</label>
                            <input type="password" name="Password" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-coffee btn-block">Đăng nhập</button>
                    </form>
                    <p class="mt-3 text-center">
                        Chưa có tài khoản?
                        <a href="@Url.Action("Signup", "Authentication")" class="btn btn-link">Đăng ký ngay</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .login-box {
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-left: -150px; /* Dịch sang trái nhiều hơn */
    }

    .btn-coffee {
        background-color: #6F4E37; /* Màu cà phê */
        color: white;
        border: none;
    }

        .btn-coffee:hover {
            background-color: #5a3d2b;
        }
</style>
