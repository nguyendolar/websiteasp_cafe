@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="banner-area" id="home">
    <div class="container">
        <div class="row fullscreen d-flex align-items-center justify-content-start">
            <div class="col-lg-5 col-md-6 col-sm-8">
                <div class="login-box p-4">
                    <h3 class="text-center">Quên mật khẩu</h3>
                    @if (ViewBag.Error != null)
                    {
                        <p class="alert alert-danger">@ViewBag.Error</p>
                    }
                    @if (ViewBag.Success != null)
                    {
                        <p class="alert alert-success">@ViewBag.Success</p>
                    }
                    <form method="post" action="@Url.Action("SendResetLink", "Authentication")">
                        <div class="form-group">
                            <label>Email:</label>
                            <input type="email" name="email" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-coffee btn-block">Gửi yêu cầu</button>
                    </form>
                    <p class="mt-3 text-center">
                        <a href="@Url.Action("Login", "Authentication")" class="btn btn-link">Quay lại đăng nhập</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .login-box {
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-left: -150px;
    }

    .btn-coffee {
        background-color: #6F4E37;
        color: white;
        border: none;
    }

        .btn-coffee:hover {
            background-color: #5a3d2b;
        }
</style>
