@{
    ViewBag.Title = "Header";
}

<header id="header" id="home">
    <div class="header-top">
        <div class="container">
            <div class="row justify-content-end">
                <div class="col-lg-8 col-sm-4 col-8 header-top-right no-padding">
                    <ul>
                        <li>Thứ Hai - Thứ Sáu : 8h - 22h</li>
                        <li>Thứ bảy - Chủ nhật : 6h - 20h</li>
                        <li><a href="#">012 345 6789</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row align-items-center justify-content-between d-flex">
            <div id="logo">
                <a href="@Url.Action("Index", "Home")"><img src="~/Content/img/logo.png" alt="Logo" title="Trang chủ" /></a>
            </div>
            <nav id="nav-menu-container">
                <ul class="nav-menu">
                    <li class="menu-active"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li><a href="#about">Về chúng tôi</a></li>
                    <li><a href="#coffee">Coffee</a></li>
                    <li><a href="#review">Review</a></li>
                    <li><a href="#blog">Tin tức</a></li>
                    @{ var userInfomatiom = (websitecafe.Models.User)Session["USER"]; }
                    @if (userInfomatiom != null)
                    {
                        <li>
                            <a href="@Url.Action("Profile", "User")">Xin chào, @userInfomatiom.FullName</a>
                        </li>
                        <li>
                            <form method="post" action="@Url.Action("Logout", "Authentication")" style="display:inline;">
                                <button type="submit" class="btn-logout">Đăng xuất</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("Login", "Authentication")">Đăng nhập</a></li>
                    }
                </ul>
            </nav><!-- #nav-menu-container -->
        </div>
    </div>
</header><!-- #header -->

<style>
    .btn-logout {
        background: none;
        border: none;
        color: white;
        cursor: pointer;
        font-size: 16px;
        padding: 0;
    }

        .btn-logout:hover {
            text-decoration: underline;
        }
</style>
